<header>
  <%= link_to 'Enviar uma receita', new_recipe_path, class: 'nav-link' %>
  <%= link_to 'Cadastrar tipo de receita', new_recipe_type_path, class: 'nav-link' %>
  <%= link_to 'Cadastrar tipo de cozinha', new_cuisine_path, class: 'nav-link' %>
</header>


<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<ul>
  <li><%= flash[:errors]%></li>
</ul>

<% @recipes.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  </ul>
<% end %>